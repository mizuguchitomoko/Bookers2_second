<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <header>
    <nav class="navbar navbar-inverse">
	<div class="container-fluid">
		<div class="navbar-header">
			<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample7">
				<span class="sr-only">Toggle navigation</span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
		</div>
		
		<div class="collapse navbar-collapse" id="navbarEexample7">
			<ul class="nav navbar-nav">
			</ul>
		<% if user_signed_in? %>
			<h3 class="navbar-text navbar-left">Bookers</h3>
			<p class="navbar-text navbar-right">
				<%= link_to "　Home　",user_path(current_user.id), class: "glyphicon glyphicon-home" %>
			  <%= link_to "　Users　",users_path, class: "glyphicon glyphicon-user users" %>
			  <%= link_to "　Books　",books_path, class: "glyphicon glyphicon-book books" %>
			  <%= link_to "　logout", destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out" %>
			</p>
		<% else %>
			<h3 class="navbar-text navbar-left">Bookers</h3>
			<p class="navbar-text navbar-right">
				<%= link_to "　Home　",root_path, class: "glyphicon glyphicon-home" %>
				<%= link_to "　About　",about_path, class: "glyphicon glyphicon-link about" %>				
				<%= link_to "　sign up　", new_user_registration_path, class: "glyphicon glyphicon-edit sign_up" %>
				<%= link_to "　login",new_user_session_path, class: "glyphicon glyphicon-log-in sign_in" %>
		<% end %>
		</div>
	</div>
</nav>
  </header>
  <body>
    <%= yield %>
  </body>
</html>
