<div class="container">
  <h1>User info</h1>
    <div class="row">
	    <div class="col-xs-4">
      <%= form_with model:@user, local:true do |f| %>
        <h4>Name</h4>
        <%= f.text_field :name, class: "form-control" %>
        <h4>Image</h4>
        <%= f.attachment_field :profiel_image,class: "user_image" %>
        <h4>Introduction</h4>
        <%= f.text_area :introduction, class: "form-control" %><br>
        <%= f.submit 'Update User' %>
      <% end %>
      </div>
    </div>
</div>