<div class="container">
  <h1>Editing Book</h1>
    <div class="row">
	    <div class="col-xs-4">
      <%= form_with model:@book, local:true do |f| %>
        <h4>Title</h4>
        <%= f.text_field :titile, class: "form-control" %>
        <h4>Opinion</h4>
        <%= f.text_area :body, class: "form-control" %><br>
        <%= f.submit 'Update Book', class: "form-control btn btn-primary" %>
      <% end %>
      </div>
    </div>
  <%= link_to 'Show', book_path(@book) %>
  |
  <%= link_to 'Back', books_path %>
</div>
