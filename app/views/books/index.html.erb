<div class="container">  <!-- この行を追加 -->
  <div class="row">
  	<div class="col-xs-3">
  		<h2>User info</h2>
  		<%= attachment_image_tag current_user, :profiel_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %><br>
  		<table class="table">
				<thead>
					<tr>
						<th>name</th><th><%= current_user.name %></th></tr>
						<tr>
						<th>introduction</th><th><%= current_user.introduction %></th>
					</tr>
  			</thead>
  		</table>
  	  <h2>New Book</h2>
		<%= form_with model: @book, url:'/books', local:true do |f| %>
  		  <h4>Title</h4>
  		  <%= f.text_field :title, class: "form-control" %>
  		  <h4>Opinion</h4>
  		  <%= f.text_area :body, class: "form-control" %><br>
  		  <%= f.submit 'Create Book', class: "form-control btn btn-primary" %>
		<% end %>
  	</div>
    <div class="col-xs-9">
  <h1>Books</h1>
  <table class="table">
	<thead>
		<tr>
			<th></th>
			<th>Title</th>
			<th>Opinion</th>
		</tr>
	</thead>
	<tbody>
	<% @books.each do |book| %>	
		<tr>
			<td><%= attachment_image_tag @user, :profiel_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %></td>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
		</tr>
  <% end %>
	</tbody>
</table>
　　</div>
  </div>
</div>


